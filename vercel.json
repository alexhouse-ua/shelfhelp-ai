{
  "version": 2,
  "functions": {
    "api/*.js": {
      "maxDuration": 30,
      "memory": 512
    }
  },
  "rewrites": [
    {
      "source": "/api/books/:path*",
      "destination": "/api/books"
    },
    {
      "source": "/api/classify/:path*", 
      "destination": "/api/classify"
    },
    {
      "source": "/api/queue/:path*",
      "destination": "/api/queue"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options", 
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
# ShelfHelp AI Environment Variables
# Copy this file to .env and configure with your values

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com
FIREBASE_PROJECT_ID=your_project_id

# Firebase Admin SDK (Production)
# GOOGLE_APPLICATION_CREDENTIALS=/secure/path/to/firebase-service-account.json
# OR set these directly for cloud deployment:
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com

# External APIs
GOODREADS_RSS_URL=https://www.goodreads.com/review/list_rss/YOUR_USER_ID?key=YOUR_RSS_KEY&shelf=read

# Library System APIs (Enhanced Availability Checker)
# Tuscaloosa Public Library OverDrive Integration
TUSCALOOSA_OVERDRIVE_ID=your_tuscaloosa_overdrive_id
TUSCALOOSA_LIBBY_URL=https://tuscaloosa.overdrive.com

# Camellia Net OverDrive Integration  
CAMELLIA_OVERDRIVE_ID=your_camellia_overdrive_id
CAMELLIA_LIBBY_URL=https://camellia.overdrive.com

# Seattle Public Library OverDrive Integration
SEATTLE_OVERDRIVE_ID=your_seattle_overdrive_id
SEATTLE_LIBBY_URL=https://seattle.overdrive.com

# Optional: OverDrive API Credentials (for direct API access)
# OVERDRIVE_CLIENT_KEY=your_overdrive_client_key
# OVERDRIVE_CLIENT_SECRET=your_overdrive_client_secret

# Optional: Hoopla API Credentials (for direct API access)
# HOOPLA_API_KEY=your_hoopla_api_key
# HOOPLA_LIBRARY_ID=your_hoopla_library_id

# API Security
API_KEY=your_secure_api_key_for_ai_assistants

# Optional
LOG_LEVEL=info
NODE_ENV=development
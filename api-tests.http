  "goodreads_id": "7235533",
  "title": "The Way of Kings",
  "author_name": "Brandon Sanderson",
  "series_name": "The Stormlight Archive",
  "series_number": 1,
  "status": "TBR",
  "genre": "Fantasy",
  "subgenre": "High / Epic Fantasy",
  "tropes": ["Epic Quest", "Chosen One", "Ancient Prophecy"],
  "spice": 1,
